{% extends 'layoutadmin.html.twig' %}
{% block title %}
    Admin
{% endblock %}
{% block Containt %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Liste des événements

            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Gestion des évenements</a></li>
                <li class="active">Liste des événements</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">



                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title"></h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Date debut</th>
                                    <th>Date fin</th>
                                    <th>Lieu</th>
                                    <th>Catégorie</th>
                                    <th>-</th>
                                    <th>-</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for x in evenements %}
                                    <tr>
                                        <td>{{ x.nom }}</td>
                                        <td>{{  x.dateDebut|date('Y-m-d')}}</td>
                                        <td>{{ x.dateFin|date('Y-m-d') }}</td>
                                        <td>{{ x.adresse }}</td>
                                        <td>{{  x.categorie}}</td>
                                        <td><a data-toggle="modal" data-target="#exampleModal1" onclick="onPressAccept ({{ x.id }})"><i class="material-icons">&#xE03B;</i></a></td>
                                        <td><a data-toggle="modal" data-target="#exampleModal" onclick="onPressDelete ({{ x.id }})"><i class="material-icons">&#xE872;</i></a></td>

                                    </tr>
                                {% endfor %}
                                </tbody>


                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>

        </section>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #ff6b6b">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer un évenement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous bien supprimer cet évenement ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a   class="btn btn-primary" href="" id="btnDelete" style="background-color: #ff6b6b; border-color: white">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #1e7e34">
                    <h5 class="modal-title" id="exampleModalLabel">Accepter un évenement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous bien accepter cet évenement ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a   class="btn btn-primary" href="" id="btnAccepter" style="background-color: #1e7e34; border-color: white">Accepter</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script>

        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging'      : true,
                'lengthChange': false,
                'searching'   : false,
                'ordering'    : true,
                'info'        : true,
                'autoWidth'   : false
            })
        })

        function onPressDelete (id )
        {
            newLien = '/admin/deleteevent/' + id;
            document.getElementById('btnDelete').href = newLien;
        }

        function onPressAccept (id )
        {
            newLien = '/admin/traitervent/' + id;
            document.getElementById('btnAccepter').href = newLien;
        }



    </script>

{% endblock %}