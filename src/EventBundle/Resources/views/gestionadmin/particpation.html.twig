{% extends 'layoutadmin.html.twig' %}
{% block title %}
    Admin
{% endblock %}
{% block Containt %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Liste des Particpations

            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('homepageadmin') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
                <li><a href="">Gestion des Ã©venements</a></li>
                <li class="active">Liste des participations</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">



                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title"></h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Image Utilisateur</th>
                                    <th>Nom utilisateur</th>
                                    <th>Email</th>
                                    <th>Image Evenement</th>
                                    <th>Nom Evenement</th>
                                    <th>Adresse</th>
                                    <th>Nombre des tickets</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for x in participation %}
                                    <tr>
                                        <td><img src="{{ asset('uploads/images/' ~ x.User.avatar) }} " style="width:  50px;"/></td>
                                        <td>{{ x.User.username }}</td>
                                        <td>{{ x.User.email }}</td>
                                        <td><img src="{{ asset('uploads/images/' ~ x.Event.image) }} " style="width:  40px;"/></td>
                                        <td>{{  x.Event.nom}}</td>
                                        <td>{{ x.Event.adresse }}</td>
                                        <td>{{ x.nbPlace }}</td>



                                    </tr>
                                {% endfor %}
                                </tbody>


                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>

        </section>
    </div>

{% endblock %}

{% block javascripts %}

    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging'      : true,
                'lengthChange': false,
                'searching'   : false,
                'ordering'    : true,
                'info'        : true,
                'autoWidth'   : false
            })
        })





    </script>

{% endblock %}