{% extends 'base.html.twig' %}
    {% block title %} Eco System {% endblock %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {% block Containt %}
        {% if app.session.flashBag.has('error') %}

            <div class="alert alert-danger">
                {% for msg in app.session.flashBag.get('error') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}

        {% if app.session.flashBag.has('Nberror') %}

            <div class="alert alert-danger">
                {% for msg in app.session.flashBag.get('Nberror') %}
                    {{ msg }}
                {% endfor %}
            </div>
        {% endif %}
        {% if app.session.flashBag.has('dateerror') %}
            <div class="alert alert-danger">


                {% for msg in app.session.flashBag.get('dateerror') %}
                    {{ msg }}
                {% endfor %}
            </div>

        {% endif %}
        {% if app.session.flashBag.has('datedebuterror') %}
            <div class="alert alert-danger">


                {% for msg in app.session.flashBag.get('datedebuterror') %}
                    {{ msg }}
                {% endfor %}
            </div>

        {% endif %}



        <div class="page-banner-section section">
            <div class="page-banner-wrap row row-0 d-flex align-items-center ">

                <!-- Page Banner -->
                <div class="col-lg-4 col-12 order-lg-2 d-flex align-items-center justify-content-center">
                    <div class="page-banner">
                        <h1>Update {{ event.nom }}</h1>

                        <div class="breadcrumb">
                            <ul>
                                <li><a href="{{ path('homepage') }}">Accueil</a></li>
                                <li><a href="{{ path('event_ajoutevenement') }}">Update Evénement</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Banner -->
                <div class="col-lg-4 col-md-6 col-12 order-lg-1">
                </div>

                <!-- Banner -->
                <div class="col-lg-4 col-md-6 col-12 order-lg-3">
                </div>
            </div>
        </div>
        <div class="login-section section mt-90 mb-90">
            <div class="container">


                <div class="form-group">

                    <div class="row">


                        <!-- Login -->
                        <div class="col-md-12">


                            <div class="box box-warning">

                                {{ form_start(form) }}
                                <div class="my-custom-class-for-errors">
                                    {{ form_errors(form) }}
                                </div>

                                <div class="form-group">
                                    {{ form_errors(form.nom) }}
                                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <div class="row">

                        <div class="col-md-6">

                            <div class="form-group">


                                {{ form_label(form.dateDebut, 'Date de début :') }}
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>

                                </div>
                                {{ form_widget(form.dateDebut) }}

                                <!-- /.input group -->
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Date -->
                            <div class="form-group">
                                {{ form_errors(form.dateFin) }}
                                {{ form_label(form.dateFin, 'Date de fin :') }}


                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                {{ form_widget(form.dateFin) }}

                                <!-- /.input group -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <select class="form-control" name="grat" onchange="gratuit()">
                                    <option selected id="pay" value="payant">Payant</option>
                                    <option id="grat" value="gratuit">Gratuit</option>

                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <input type="text" name="prix" id="prix" placeholder="Prix" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="box-body pad">
                                {{ form_label(form.adresse, 'Adresse:') }}


                                {{ form_widget(form.adresse, { 'attr': {'class': 'form-control','rows':'10','cols':'80' } }) }}
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="box-body pad">
                                {{ form_label(form.description, 'Description:') }}

                                {{ form_widget(form.description, { 'attr': {'class': 'form-control','rows':'10','cols':'80'} })}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <div class="row">
                        <div class="col-md-4">

                            <div class="form-group">
                                {{ form_errors(form.minParticipants) }}
                                {{ form_widget(form.minParticipants, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                {{ form_errors(form.maxParticipants) }}
                                {{ form_widget(form.maxParticipants, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                <label for="exampleInputFile">{{ form_label(form.image, 'Choisir image :') }}</label>
                                {{ form_widget(form.image) }}


                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <div class="row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">

                            <div class="form-group">
                                {{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-block btn-success btn-lg'} }) }}
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>



        </div>


    {% endblock %}
    {% block javascripts %}


        <script language="javascript">

            function gratuit() {
                if (document.getElementById("prix").disabled == false) {
                    document.getElementById("prix").disabled = true;
                }
                else {
                    document.getElementById("prix").disabled = false;

                }
            }



        </script>

    {% endblock %}

