{% extends 'base.html.twig' %}
    {% block title %} Eco System {% endblock %}

{% block Containt %}

    <div class="page-banner-section section">
        <div class="page-banner-wrap row row-0 d-flex align-items-center ">

            <!-- Page Banner -->
            <div class="col-lg-4 col-12 order-lg-2 d-flex align-items-center justify-content-center">
                <div class="page-banner">
                    <h1>Liste des offres</h1>

                    <div class="breadcrumb">
                        <ul>
                            <li><a href="{{ path('homepage') }}">Accueil</a></li>
                            <li><a href="">Liste des offres </a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Banner -->
            <div class="col-lg-4 col-md-6 col-12 order-lg-1">
            </div>

            <!-- Banner -->
            <div class="col-lg-4 col-md-6 col-12 order-lg-3">
            </div>
        </div>
    </div>
    <div class="page-section section mt-90 mb-90">
    <div class="container">
    <div class="row">
        <div class="col-12">

            <form action="#">
                <div class="cart-table table-responsive">
                    <table class="table">
                        <thead>
                        <tr>

                            <th class="pro-title">titre</th>
                            <th class="pro-title">type</th>
                            <th class="pro-title">description</th>
                            <th class="pro-title">date de offre</th>
                            <th class="pro-title">date de validite</th>

                            <th class="pro-subtotal">--</th>
                            <th class="pro-subtotal">--</th>



                        </tr>
                        </thead>
                        <tbody>
    {% for x in data %}
        <tr>

            <td class="pro-title">{{ x.titre }}</td>
            <td class="pro-title">{{ x.type }}</td>
            <td class="pro-title">{{ x.description }}</td>
            <td class="pro-title">{{ x.dateoffre | date('D,M,Y') }}</td>
            <td class="pro-title">{{ x.datevalidite | date('D,M,Y') }}</td>
            <td><a href="{{ path('modifieroffre', {'id': x.Id })}}" ><i class="fa fa-edit"></i></a></td>
            <td><a data-toggle="modal" data-target="#exampleModal" onclick="onPressDelete ({{ x.Id }})"><i class="fa fa-trash-o"></i></a></td>

        </tr>
    {% endfor %}
                        </tbody>
                    </table>
                </div>

            </form>

        </div>
    </div>
    </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #ff6b6b">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer un offre</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous bien supprimer cet offer ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a   class="btn btn-primary" href="" id="btnDelete" style="background-color: #ff6b6b; border-color: white">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>





        function onPressDelete (id )
        {
            newLien = '/supprimeroffre/' + id;
            document.getElementById('btnDelete').href = newLien;
        }
    </script>
{% endblock %}