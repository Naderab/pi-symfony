{% extends 'base.html.twig' %}
    {% block title %} Ajouter un offre {% endblock %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {% block Containt %}

        <div class="page-banner-section section">
            <div class="page-banner-wrap row row-0 d-flex align-items-center ">

                <!-- Page Banner -->
                <div class="col-lg-4 col-12 order-lg-2 d-flex align-items-center justify-content-center">
                    <div class="page-banner">
                        <h1>Ajouter un offre</h1>
                        <div class="breadcrumb">
                            <ul>
                                <li><a href="{{ path('homepage') }}">Accueil</a></li>
                                <li><a href="">Ajouter un offre</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Banner -->
                <div class="col-lg-4 col-md-6 col-12 order-lg-1">
                </div>

                <!-- Banner -->
                <div class="col-lg-4 col-md-6 col-12 order-lg-3">
                </div>
            </div>
        </div>

        <div class="login-section section mt-90 mb-90">
            <div class="container">

                <div class="form-group">

                    <div class="row">
                        <div class="col-md-6">

                            <div class="box box-warning">
                                {{ form_start(form) }}

                                <div class="my-custom-class-for-errors" id="errortitre">
                                    {{ form_errors(form) }}
                                </div>

                                <div class="form-group">
                                    {{ form_errors(form.titre) }}
                                    {{ form_label(form.titre, 'Titre :') }}
                                    {{ form_widget(form.titre, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="my-custom-class-for-errors" id="errortype">
                                    {{ form_errors(form) }}
                                </div>
                                {{ form_errors(form.type) }}
                                {{ form_label(form.type, 'Type :') }}
                                {{ form_widget(form.type,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <div class="row">
                        <div class="my-custom-class-for-errors" id="errordate">
                            {{ form_errors(form) }}
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_errors(form.dateoffre) }}
                                {{ form_label(form.dateoffre, 'Date de d√©but :') }}
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>

                                </div>
                                {{ form_widget(form.dateoffre) }}
                                <!-- /.input group -->
                            </div>
                        </div>

                        <div class="col-md-6">
                            <!-- Date -->
                            <div class="form-group">
                                {{ form_errors(form.datevalidite) }}
                                {{ form_label(form.datevalidite, 'date de validite :') }}


                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                {{ form_widget(form.datevalidite) }}

                                <!-- /.input group -->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-body pad">
                                <div class="my-custom-class-for-errors" id="errortype">
                                    {{ form_errors(form) }}
                                </div>
                                {{ form_errors(form.description) }}
                                {{ form_label(form.description, 'Description:') }}
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control','rows':'10','cols':'80' } }) }}
                            </div>
                        </div>
                    </div>
                </div>



                <div class="form-group">

                    <div class="row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_widget(form.Enregistrer, { 'attr': {'class': 'btn btn-block btn-success btn-lg-1'} }) }}
                                {{ form_widget(form.Annuler, { 'attr': {'class': 'btn btn-block btn-primary btn-lg-1'} }) }}
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>



        </div>


    {% endblock %}

