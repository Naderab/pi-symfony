{% extends 'layoutadmin.html.twig' %}
{% block title %}
    Admin
{% endblock %}
{% block Containt %}



    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Liste des newsleters

            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Gestion de blog</a></li>
                <li class="active">Liste des postes</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">



                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title"></h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>titre</th>
                                    <th>description</th>


                                    <th>action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in news %}
                                    <tr>
                                        <td>{{ entity.titre }}</td>

                                        <td>{{ entity.description }}</td>

                                        <td><a href="{{ path('listenews_env',{'id':entity.id}) }}"  class=""><i class="material-icons">&#xE417;</i></a>

                                            <a href="{{ path('modifiernews',{'id':entity.id}) }}" class=" "><i class="material-icons">&#xE254;</i></a>
                                            <a data-toggle="modal" data-target="#exampleModal" onclick="onPressDelete ({{ entity.id }})"><i class="material-icons">&#xE872;</i></a>

                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>


                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>

        </section>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #ff6b6b">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer un post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous bien supprimer cette Newsletter ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a   class="btn btn-primary" href="" id="btnDelete" style="background-color: #ff6b6b; border-color: white">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging'      : true,
                'lengthChange': false,
                'searching'   : false,
                'ordering'    : true,
                'info'        : true,
                'autoWidth'   : false
            })
        })

        function onPressDelete (id )
        {
            newLien = '/deletenews/' + id;
            document.getElementById('btnDelete').href = newLien;
        }

    </script>
    </body>







{% endblock %}